@page
@model unimade.MTPortal.Web.Pages.IndexModel
@using Microsoft.Extensions.Localization
@using Volo.Abp.TenantManagement
@using Microsoft.AspNetCore.Mvc.Localization
@using unimade.MTPortal.Localization
@inject IStringLocalizer<MTPortalResource> L

@section styles {
    <abp-style src="/Pages/Index.css" />
}

@section scripts {
    <abp-script src="/Pages/Index.js" />
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary mb-3">
            @L["WelcomeToMTPortal"]
        </h1>
        <p class="lead text-muted">
            @L["PortalDescription"]
        </p>
    </div>

    <!-- Admin Dashboard Section -->
    @if (Model.IsUserAuthenticated && Model.IsAdmin)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            @L["AdminDashboard"]
                            @if (Model.IsHostAdmin)
                            {
                                <span class="badge bg-warning ms-2">Host Admin</span>
                            }
                            else if (Model.IsTenantAdmin)
                            {
                                <span class="badge bg-info ms-2">Tenant Admin</span>
                            }
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Welcome Message -->
                            <div class="col-md-12 mb-4">
                                <h4>@Model.WelcomeMessage</h4>
                                <p class="text-muted">@L["AdminWelcomeMessage"]</p>
                            </div>

                            <!-- System Info Cards -->
                            @if (Model.IsHostAdmin)
                            {
                                <!-- Host Admin View -->
                                <div class="col-md-3 mb-3">
                                    <div class="card bg-light border-0">
                                        <div class="card-body text-center">
                                            <i class="fas fa-building fa-2x text-primary mb-2"></i>
                                            <h3>@Model.SystemInfo.TotalTenants</h3>
                                            <p class="text-muted mb-0">@L["TotalTenants"]</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (Model.IsTenantAdmin)
                            {
                                <!-- Tenant Admin View -->
                                <div class="col-md-3 mb-3">
                                    <div class="card bg-light border-0">
                                        <div class="card-body text-center">
                                            <i class="fas fa-bullhorn fa-2x text-success mb-2"></i>
                                            <h3>@Model.SystemInfo.TotalTenants</h3>
                                            <p class="text-muted mb-0">Total Announcements</p>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="col-md-3 mb-3">
                                <div class="card bg-light border-0">
                                    <div class="card-body text-center">
                                        <i class="fas fa-users fa-2x text-success mb-2"></i>
                                        <h3>@Model.SystemInfo.ActiveUsers</h3>
                                        <p class="text-muted mb-0">@L["ActivePublicUsers"]</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <div class="card bg-light border-0">
                                    <div class="card-body text-center">
                                        <i class="fas fa-heartbeat fa-2x text-info mb-2"></i>
                                        <div class="system-status-indicator status-healthy">
                                            <h3>@Model.SystemInfo.SystemStatus</h3>
                                        </div>
                                        <p class="text-muted mb-0">@L["SystemStatus"]</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <div class="card bg-light border-0">
                                    <div class="card-body text-center">
                                        <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                        <h3>@Model.SystemInfo.LastUpdate.ToString("MMM dd")</h3>
                                        <p class="text-muted mb-0">@L["LastUpdate"]</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Admin Actions -->
                            <div class="col-12 mt-4">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                                    @if (Model.IsHostAdmin)
                                    {
                                        <abp-button button-type="Primary"
                                                    text="@L["ManageTenants"]"
                                                    icon="cog"
                                                    onclick="location.href='/TenantManagement'" />
                                    }
                                    else if (Model.IsTenantAdmin)
                                    {
                                        <abp-button button-type="Primary"
                                                    text="Manage Announcements"
                                                    icon="bullhorn"
                                                    onclick="location.href='/Internal/Announcements'" />
                                    }
                                    <abp-button button-type="Secondary"
                                                text="@L["SystemSettings"]"
                                                icon="sliders-h"
                                                onclick="showSettings()" />
                                    <abp-button button-type="Info"
                                                text="@L["ViewReports"]"
                                                icon="chart-bar"
                                                onclick="showReports()" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Authenticated Host User Section (non-admin) -->
    @if (Model.IsUserAuthenticated && Model.IsHostUser)
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            @L["ActionRequired"]
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="py-4">
                            <i class="fas fa-door-open fa-4x text-warning mb-4"></i>
                            <h4 class="text-warning mb-3">@L["TenantLoginRequired"]</h4>
                            <p class="lead text-muted mb-4">
                                You are currently authenticated to the host system. To access tenant-specific features and content,
                                please select a tenant to continue.
                            </p>

                            <!-- Available Tenants for Selection -->
                            @if (Model.AvailableTenants.Any())
                            {
                                <div class="row justify-content-center mb-4">
                                    <div class="col-lg-8">
                                        <h6 class="text-muted mb-3">Select a tenant to continue:</h6>
                                        <div class="list-group">
                                            @foreach (var tenant in Model.AvailableTenants)
                                            {
                                                <a href="@Url.Page("/Account/Login", new { tenant = tenant.Name })"
                                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <i class="fas fa-building text-primary me-2"></i>
                                                        <strong>@tenant.Name</strong>
                                                    </div>
                                                    <div>
                                                        <small class="text-muted me-2">Click to enter</small>
                                                        <i class="fas fa-chevron-right text-muted"></i>
                                                    </div>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mb-4">
                                    <i class="fas fa-info-circle me-2"></i>
                                    No tenants are currently available. Please contact your system administrator.
                                </div>
                            }

                            <!-- Additional Options -->
                            <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
                                <abp-button button-type="Primary"
                                            text="Refresh Tenant List"
                                            icon="sync"
                                            onclick="location.reload()" />

                                <abp-button button-type="Secondary"
                                            text="Account Settings"
                                            icon="user-cog"
                                            onclick="location.href='/Account/Manage'" />

                                <abp-button button-type="Outline_Secondary"
                                            text="Logout"
                                            icon="sign-out-alt"
                                            onclick="location.href='/Account/Logout'" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Tenant Selection Section (for unauthenticated users) -->
    @if (!Model.IsUserAuthenticated)
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-door-open me-2"></i>
                            @L["SelectTenantToLogin"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Tenant List -->
                        @if (Model.AvailableTenants.Any())
                        {
                            <div class="row">
                                @foreach (var tenant in Model.AvailableTenants)
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="card tenant-card h-100">
                                            <div class="card-body">
                                                <h6 class="card-title">
                                                    <i class="fas fa-building me-2 text-primary"></i>
                                                    @tenant.Name
                                                </h6>
                                            </div>
                                            <div class="card-footer bg-transparent">
                                                <div class="d-grid">
                                                    <abp-button button-type="Primary"
                                                                size="Small"
                                                                text="@L["LoginToTenant"]"
                                                                icon="sign-in-alt"
                                                                onclick="location.href='@Url.Page("/Account/Login", new { tenant = tenant.Name })'" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-building fa-3x text-muted mb-3"></i>
                                <h5>@L["NoTenantsAvailable"]</h5>
                                <p class="text-muted">@L["NoTenantsMessage"]</p>
                            </div>
                        }

                        <!-- Direct Login Option -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="text-center">
                                    <p class="text-muted mb-3">@L["OrLoginDirectly"]</p>
                                    <abp-button button-type="Outline_Primary"
                                                text="@L["DirectLogin"]"
                                                icon="key"
                                                onclick="location.href='@Url.Page("/Account/Login")'" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Features Section (Visible to all) -->
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="text-center mb-4">@L["PlatformFeatures"]</h3>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <h5>@L["SecureAccess"]</h5>
                    <p class="text-muted">@L["SecureAccessDescription"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-rocket fa-3x text-success mb-3"></i>
                    <h5>@L["HighPerformance"]</h5>
                    <p class="text-muted">@L["HighPerformanceDescription"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-hands-helping fa-3x text-info mb-3"></i>
                    <h5>@L["MultiTenant"]</h5>
                    <p class="text-muted">@L["MultiTenantDescription"]</p>
                </div>
            </div>
        </div>
    </div>
</div>