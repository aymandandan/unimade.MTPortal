@page
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using unimade.MTPortal.Localization
@using unimade.MTPortal.Web.Pages.Internal.Users
@model CreateModalModel
@inject IStringLocalizer<MTPortalResource> L

@{
    Layout = null;
}

@section scripts {
    <abp-script src="/Pages/Internal/Users/CreateUpdateModals.js"></abp-script>
}

<form method="post" asp-page="/Internal/Users/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewPublicUser"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="UserInfo.UserName" />
            <abp-input asp-for="UserInfo.Name" />
            <abp-input asp-for="UserInfo.Surname" />
            <abp-input asp-for="UserInfo.Email" />

            <div class="mb-3">
                <label asp-for="UserInfo.Password" class="form-label">@L["Password"] *</label>
                <div class="input-group">
                    <input type="password"
                           class="form-control"
                           autocomplete="new-password"
                           asp-for="UserInfo.Password"/>
                    <button class="btn btn-outline-secondary"
                            type="button"
                            id="PasswordVisibilityButton"
                            style="border-left: none; border-color: #ced4da;">
                        <i class="fa fa-eye-slash" aria-hidden="true"></i>
                    </button>
                </div>
                <span asp-validation-for="UserInfo.Password" class="text-danger"></span>
            </div>

            <abp-input asp-for="UserInfo.PhoneNumber" />
            <abp-input asp-for="UserInfo.IsActive" /><abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
