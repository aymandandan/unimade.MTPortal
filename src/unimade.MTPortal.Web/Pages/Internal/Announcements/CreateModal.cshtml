@page
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using unimade.MTPortal.Localization
@using unimade.MTPortal.Web.Pages.Internal.Announcements
@model CreateModalModel
@inject IStringLocalizer<MTPortalResource> L

@{
    Layout = null;
}
<abp-dynamic-form abp-model="Announcement" asp-page="/Internal/Announcements/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewAnnouncement"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
