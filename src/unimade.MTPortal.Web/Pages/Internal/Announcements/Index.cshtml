@page
@using Microsoft.Extensions.Localization
@using unimade.MTPortal.Localization
@using unimade.MTPortal.Web.Pages.Internal.Announcements
@model IndexModel
@inject IStringLocalizer<MTPortalResource> L

@section scripts {
    <abp-script src="/Pages/Internal/Announcements/index.js"></abp-script>
}

<abp-card>
    <abp-card-header>
        <abp-row class="align-items-center justify-content-between">
            <abp-column size-md="_6">
                <abp-card-title>@L["Announcements"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewAnnouncementButton"
                            text="@L["NewAnnouncement"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="AnnouncementsTable"></abp-table>
    </abp-card-body>
</abp-card>
