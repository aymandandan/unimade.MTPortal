@page
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using unimade.MTPortal.Localization
@using unimade.MTPortal.Web.Pages.Internal.Announcements
@model EditModalModel
@inject IStringLocalizer<MTPortalResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Announcement" asp-page="/Internal/Announcements/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value" ></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
